.front
	
	.story
		= render 'homepage_story'
/
	#announcement
		%h2
			Let op! Tijdelijk andere contact gegevens. Zie
			%a{:href => '/contact/index'} Contact
			voor meer informatie.

.company_offers
	
	%a.companies.offer{:href => '/companies/index'}
		= render 'companies'

	%a.consumers.offer{:href => '/consumers/index'}
		= render 'consumers'

	%a.for_sale.offer{:href => '/for_sale/index'}
		= render 'for_sale'

#new_offers
	#new_background
	#new_holder
		%a.separator{:href => '#'}
			Klik hier voor meer nieuws!
		
		#new_story
			= render 'new_story'
		
		#new_buttons

			%a#new-1.offer{:href => '/companies/index'}
				= render 'companies'

			%a#new-2.offer{:href => '/consumers/index'}
				= render 'consumers'

			%a#new-3.offer{:href => '/for_sale/index'}
				= render 'for_sale'
		
	%a.separator{:href => '#'}
		Klik hier voor meer nieuws!