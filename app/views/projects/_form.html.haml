= form_for @project do |f|
  -if @project.errors.any?
    #error_explanation
      %h2= "#{pluralize(@project.errors.count, "error")} prohibited this project from being saved:"
      %ul
        - @project.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :year
    = f.number_field :year
  .field
    = f.label :car_type
    = f.text_field :car_type
  .field
    = f.label :project_number
    = f.number_field :project_number
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :worked_on
    = f.text_area :worked_on
  .field
    = f.label :details
    = f.text_area :details
  .field
    = f.label :image1
    = f.text_field :image1
  .field
    = f.label :image2
    = f.text_field :image2
  .field
    = f.label :image3
    = f.text_field :image3
  .actions
    = f.submit 'Save'
