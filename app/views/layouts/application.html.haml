!!!5
%html
	%head
		= stylesheet_link_tag    'application'
		= javascript_include_tag 'application'
		= csrf_meta_tags
		%title
			Hy's Mooi - 
			= controller.controller_name.gsub('_', ' ').split(' ').each{|word| word.capitalize!}.join(' ')
	%body{ :class => controller.controller_name}
		#stage
			.header
				= render 'header'
			.content
				= yield
			.footer
				= render 'footer'